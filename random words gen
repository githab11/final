import java.io.IOException;
import java.nio.charset.StandardCharsets;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.util.List;
import java.util.Random;

public class Main {
    public static void main(String[] args) {
        String mainfile = "every_word.txt"; // Use an absolute path if needed for testing
        List<String> words;

        try {
            // Read all lines from the file with UTF-8 encoding
            words = Files.readAllLines(Paths.get(mainfile), StandardCharsets.UTF_8);

            // Create an instance of Random
            Random random = new Random();

            // Loop to generate and print 10 random words
            for (int i = 0; i < 10; i++) {  // Change 10 to any number of times you want to generate words
                String randomWord = words.get(random.nextInt(words.size()));
                System.out.println("Random word " + (i + 1) + ": " + randomWord);
            }
        } catch (IOException e) {
            System.out.println("Error reading file: " + e.getMessage());
            e.printStackTrace();
        }
    }
}
